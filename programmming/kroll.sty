%% set default as centered
\newcommand\onelineheader[2][c]{%
\leavevmode\par
 \if#1c\@centeredheadertrue
  \else\@centeredheaderfalse
\fi
 \vspace{1.5\baselineskip}%
   \if@centeredheader
      \bgroup\onelineheaderfont\centering\mbox{#2}\par\egroup
   \else
